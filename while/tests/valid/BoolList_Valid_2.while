[bool] play([bool] board) {
    [bool] nboard = board;
    for(int i=0;i<|board|;i=i+1) {
        if(isAlive(i,board)) {
            nboard[i] = true;
        } else {
            nboard[i] = false;
        }
    }
    return nboard;
}

bool isAlive(int i, [bool] board) {
    if(i>0 && (i+1) < |board| && board[i-1] && board[i+1]) {
        return true;
    } else {
        return false;
    }
}

void main() {
    [bool] xs = [true,true,true,true,true,true,true];
    for(int i=0;i!=5;i=i+1) {
        print xs;
        xs = play(xs);
    }
}
    


    

